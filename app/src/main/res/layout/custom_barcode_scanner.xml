<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    custom_barcode_scanner.xml-->
    <com.example.qr_code_scanner.TopRectBarcodeView
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.journeyapps.barcodescanner.ViewfinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_possible_result_points="@color/transparent_color"
        app:zxing_viewfinder_mask="@color/transparent_color"
        app:zxing_viewfinder_laser_visibility="false" />
</merge>