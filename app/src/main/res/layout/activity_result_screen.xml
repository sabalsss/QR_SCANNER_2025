<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_background">

    <!-- Toolbar (Fixed at the Top) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_bg"
        app:titleTextColor="@color/white">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/type_of_qr_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/custom_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Timestamp (Moved above the ScrollView) -->
    <TextView
        android:id="@+id/timestamp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/card_background"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@color/gray_light"
        android:textSize="16sp" />

    <!-- Scrollable Content (Now starts below timestamp) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/timestamp_text"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Result Text Area -->
            <TextView
                android:id="@+id/qr_result_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6dp"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="20sp" />

            <!-- Buttons -->
            <LinearLayout
                android:id="@+id/button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/qr_result_text"
                android:padding="10dp"
                android:orientation="vertical">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:backgroundTint="@color/transparent_color"
                        android:text="@string/Copy"
                        android:textColor="@color/drawer_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/content_copy_24px"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconSize="30dp"
                        app:iconTint="@color/drawer_text_color" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:backgroundTint="@color/transparent_color"
                        android:text="@string/share"
                        android:textColor="@color/drawer_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/share_24px"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconSize="30dp"
                        app:iconTint="@color/drawer_text_color" />


                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_connect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="?attr/selectableItemBackground"
                        android:backgroundTint="@color/transparent_color"
                        android:maxLines="1"
                        android:text="@string/connect_to_wifi"
                        android:textColor="@color/drawer_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:icon="@drawable/wifi"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconSize="30dp"
                        app:iconTint="@color/drawer_text_color" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_open_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:backgroundTint="@color/transparent_color"
                        android:text="@string/open_url"
                        android:textColor="@color/drawer_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:icon="@drawable/open_in_new_24px"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconSize="30dp"
                        app:iconTint="@color/drawer_text_color" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/extra_opener"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:backgroundTint="@color/transparent_color"
                        android:text="@string/open_url"
                        android:textColor="@color/drawer_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:icon="@drawable/open_in_new_24px"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconSize="30dp"
                        app:iconTint="@color/drawer_text_color" />
                </LinearLayout>
            </LinearLayout>

            <!-- QR Result Image -->
            <RelativeLayout
                android:id="@+id/qr_result_image_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/button_container">

                <ImageView
                    android:id="@+id/qr_result_image"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/qr_result_image"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher_round" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>