<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
<!--    activity_result_screen.xml-->
    <!-- ActionBar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/button_background"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/back"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:text="@string/app_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Result Text Area -->
    <TextView
        android:id="@+id/qr_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/toolbar"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:background="@color/text_background"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:maxLines="15"
        android:lineSpacingExtra="4dp"
        android:breakStrategy="simple" />

    <TextView
        android:id="@+id/timestamp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_result_text"
        android:padding="4dp"
        android:textColor="@color/black"
        android:text="Scanned Time:2024/1/2"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@color/line_color" />

    <!-- Horizontal LinearLayout for Buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/qr_result_text"
        android:layout_marginTop="30dp"
        android:weightSum="3">

        <!-- Copy Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Copy"
            android:contentDescription="@string/Copy"
            android:background="@drawable/button_background" />

        <!-- Share Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="@string/share"
            android:contentDescription="@string/share"
            android:background="@drawable/button_background" />

        <!-- Connect Button (only visible if it's a Wi-Fi QR) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Connect"
            android:visibility="gone"
            android:contentDescription="@string/Connect"
            android:background="@drawable/button_background" />
    </LinearLayout>

    <!-- Open URL Button (only visible when needed) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_open_url"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="@string/open_url"
        android:ellipsize="end"
        android:singleLine="true"
        android:contentDescription="@string/open_url"
        android:background="@drawable/button_background" />

    <!-- ImageView to show scanned image -->
    <ImageView
        android:id="@+id/qr_result_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/btn_open_url"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/qr_result_image" />

</RelativeLayout>
